@namespace GumihoUI

<button class="g-button g-button--@(!Disabled ? ButtonColor : "disabled")
               @(RoundButton ? "g-button--round" : string.Empty)
               @(FullWidth? "g-button--fullwidth" : string.Empty)"
        disabled="@Disabled" @onclick="OnClickCallback"
        @oncontextmenu="OnRigthClickCallback"
        @oncontextmenu:preventDefault="OnRigthClickCallback.HasDelegate">
    <span class="g-button__content">
        @ChildContent
    </span>
</button>

@code {
    [Parameter] public string ButtonColor { get; set; } = ButtonColors.Blue;
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool RoundButton { get; set; }
    [Parameter] public bool FullWidth { get; set; }
    [Parameter] public EventCallback<MouseEventArgs> OnClickCallback { get; set; }
    [Parameter] public EventCallback<MouseEventArgs> OnRigthClickCallback { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
